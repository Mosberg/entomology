{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://entomology.mod/schemas/mechanics.schema.json",
  "title": "Mechanics Configuration",
  "description": "Schema for global game mechanics configuration in the Entomology Minecraft mod.",
  "type": "object",
  "properties": {
    "breeding": {
      "type": "object",
      "description": "Breeding mechanics configuration.",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Master toggle for breeding mechanics.",
          "default": true
        },
        "baseChance": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Base breeding success chance.",
          "default": 0.25
        },
        "mutationChance": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Base mutation chance.",
          "default": 0.05
        },
        "cooldownTicks": {
          "type": "integer",
          "minimum": 0,
          "description": "Default cooldown between breeding attempts in ticks.",
          "default": 6000
        },
        "requiresPlayer": {
          "type": "boolean",
          "description": "Whether breeding requires player proximity.",
          "default": true
        },
        "playerRange": {
          "type": "integer",
          "minimum": 1,
          "description": "Range in blocks for player proximity check.",
          "default": 32
        }
      },
      "additionalProperties": false
    },
    "environment": {
      "type": "object",
      "description": "Environmental mechanics configuration.",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Master toggle for environmental mechanics.",
          "default": true
        },
        "updateInterval": {
          "type": "integer",
          "minimum": 1,
          "description": "Ticks between environmental checks.",
          "default": 100
        },
        "temperatureAffectsSpawning": {
          "type": "boolean",
          "description": "Whether biome temperature affects insect spawning.",
          "default": true
        },
        "weatherAffectsBehavior": {
          "type": "boolean",
          "description": "Whether weather affects insect behavior.",
          "default": true
        },
        "seasonalBehavior": {
          "type": "boolean",
          "description": "Whether insects have seasonal behavior patterns.",
          "default": false
        }
      },
      "additionalProperties": false
    },
    "research": {
      "type": "object",
      "description": "Research mechanics configuration.",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Master toggle for research mechanics.",
          "default": true
        },
        "autoTrackDiscoveries": {
          "type": "boolean",
          "description": "Automatically track new specimen discoveries.",
          "default": true
        },
        "experienceMultiplier": {
          "type": "number",
          "minimum": 0.0,
          "description": "Multiplier for experience rewards.",
          "default": 1.0
        },
        "requiresResearchStation": {
          "type": "boolean",
          "description": "Whether research requires a research station.",
          "default": true
        }
      },
      "additionalProperties": false
    },
    "capture": {
      "type": "object",
      "description": "Capture mechanics configuration.",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Master toggle for capture mechanics.",
          "default": true
        },
        "baseSuccessRate": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Base capture success rate modifier.",
          "default": 1.0
        },
        "damageReducesCaptureChance": {
          "type": "boolean",
          "description": "Whether entity damage reduces capture chance.",
          "default": true
        },
        "preserveEntityData": {
          "type": "boolean",
          "description": "Whether captured entities preserve NBT data.",
          "default": true
        },
        "captureExperienceReward": {
          "type": "integer",
          "minimum": 0,
          "description": "Experience points awarded per capture.",
          "default": 5
        }
      },
      "additionalProperties": false
    },
    "spawning": {
      "type": "object",
      "description": "Spawning mechanics configuration.",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Master toggle for custom spawning.",
          "default": true
        },
        "spawnRateMultiplier": {
          "type": "number",
          "minimum": 0.0,
          "description": "Global spawn rate multiplier.",
          "default": 1.0
        },
        "respectMobCap": {
          "type": "boolean",
          "description": "Whether spawns respect the mob cap.",
          "default": true
        },
        "biomeDiversity": {
          "type": "boolean",
          "description": "Whether biome affects insect diversity.",
          "default": true
        }
      },
      "additionalProperties": false
    },
    "display": {
      "type": "object",
      "description": "Display mechanics configuration.",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Master toggle for display mechanics.",
          "default": true
        },
        "animateDisplays": {
          "type": "boolean",
          "description": "Whether display cases show animated entities.",
          "default": true
        },
        "displayParticles": {
          "type": "boolean",
          "description": "Whether displays show particle effects.",
          "default": true
        },
        "nameTagsVisible": {
          "type": "boolean",
          "description": "Whether entity names are visible in displays.",
          "default": true
        }
      },
      "additionalProperties": false
    },
    "difficulty": {
      "type": "object",
      "description": "Difficulty scaling configuration.",
      "properties": {
        "scaleWithDifficulty": {
          "type": "boolean",
          "description": "Whether mechanics scale with game difficulty.",
          "default": true
        },
        "peacefulDisablesHostile": {
          "type": "boolean",
          "description": "Whether peaceful mode disables hostile insects.",
          "default": true
        },
        "hardModeBonuses": {
          "type": "object",
          "description": "Bonuses applied in hard mode.",
          "properties": {
            "healthMultiplier": {
              "type": "number",
              "minimum": 1.0,
              "description": "Health multiplier for insects.",
              "default": 1.5
            },
            "damageMultiplier": {
              "type": "number",
              "minimum": 1.0,
              "description": "Damage multiplier for insects.",
              "default": 1.25
            },
            "captureChancePenalty": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "description": "Reduction to capture success rates.",
              "default": 0.2
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "performance": {
      "type": "object",
      "description": "Performance optimization settings.",
      "properties": {
        "maxEntitiesPerChunk": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum mod entities per chunk.",
          "default": 20
        },
        "entityTickRate": {
          "type": "integer",
          "minimum": 1,
          "description": "Ticks between entity AI updates.",
          "default": 1
        },
        "particleLimit": {
          "type": "integer",
          "minimum": 0,
          "description": "Maximum particles per entity.",
          "default": 10
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
